NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3001

# Local Development Database
MONGODB_URI=mongodb://localhost:27017/appmarketplace_dev

# Development Secrets (use real values locally)
JWT_SECRET=dev-jwt-secret-not-for-production
SESSION_SECRET=dev-session-secret-not-for-production
BCRYPT_ROUNDS=8

# Development CORS (allow all localhost)
CORS_ORIGIN=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,http://localhost:5173

# Development Features
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=true
LOG_LEVEL=debug

# Mock services for development (set to true to avoid external API calls)
MOCK_GITHUB_API=false
MOCK_STRIPE_API=true
MOCK_EMAIL_SERVICE=true