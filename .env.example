# Example Environment Variables for PackCode
# Copy this file to .env and fill in your values

# Development/Production Environment
NODE_ENV=development

# Domain Configuration
CLIENT_URL=http://localhost:3001
API_URL=http://localhost:5001/api

# Database
MONGODB_URI=mongodb://localhost:27017/packcode

# JWT Secret (generate a secure random string)
JWT_SECRET=your-jwt-secret-here

# Session Secret (generate a secure random string)
SESSION_SECRET=your-session-secret-here

# GitHub OAuth (create app at https://github.com/settings/applications/new)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (create app at https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Payment Processing (get keys from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# OpenAI API (optional, for AI features - get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@pack-code.com
EMAIL_PASS=your-email-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Server Port
PORT=5001