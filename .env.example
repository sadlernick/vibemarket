# Example Environment Variables for PackCode
# Copy this file to .env and fill in your values

# =============================================
# ENVIRONMENT CONFIGURATION
# =============================================
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3001

# =============================================
# DATABASE CONFIGURATION
# =============================================
# Development Database
MONGODB_URI=mongodb://localhost:27017/appmarketplace_dev

# Test Database (separate for testing)
MONGODB_TEST_URI=mongodb://localhost:27017/appmarketplace_test

# Production Database (use MongoDB Atlas in production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/appmarketplace_prod

# =============================================
# AUTHENTICATION & SECURITY
# =============================================
# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secure-jwt-secret-change-in-production

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
SESSION_SECRET=your-super-secure-session-secret-change-in-production

# Bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================
# GITHUB OAUTH CONFIGURATION
# =============================================
# Create app at https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/github/oauth/callback

# =============================================
# STRIPE PAYMENT PROCESSING
# =============================================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================
# EXTERNAL APIS (OPTIONAL)
# =============================================
# OpenAI API for AI features (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key

# =============================================
# EMAIL CONFIGURATION
# =============================================
# For transactional emails (user notifications, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@pack-code.com

# =============================================
# LOGGING CONFIGURATION
# =============================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================
# SECURITY & RATE LIMITING
# =============================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# =============================================
# DEVELOPMENT/TESTING
# =============================================
# Test Configuration
TEST_TIMEOUT=30000
TEST_DB_CLEANUP=true

# Development Features
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=true

# Mock External Services in Development
MOCK_GITHUB_API=false
MOCK_STRIPE_API=false
MOCK_EMAIL_SERVICE=false