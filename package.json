{
  "name": "pack-code",
  "version": "1.0.0",
  "description": "PackCode - The marketplace for vibe coders. Build together as a pack.",
  "main": "server/index.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "NODE_ENV=production node server/index.js",
    "server:dev": "NODE_ENV=development nodemon server/index.js",
    "client": "cd client && npm start",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm install --legacy-peer-deps && npm run build:vercel && cd .. && mkdir -p public && cp -r client/build/* public/",
    "build:vercel": "cd client && npm install --legacy-peer-deps && GENERATE_SOURCEMAP=false ESLINT_NO_DEV_ERRORS=true npm run build && cd .. && mkdir -p public && cp -r client/build/* public/",
    "build:production": "NODE_ENV=production npm run build",
    "start": "NODE_ENV=production node server/index.js",
    "test": "NODE_ENV=test jest server/tests --setupFilesAfterEnv=./server/tests/setup.js --testTimeout=30000",
    "test:watch": "NODE_ENV=test jest server/tests --setupFilesAfterEnv=./server/tests/setup.js --watch --testTimeout=30000",
    "test:coverage": "NODE_ENV=test jest server/tests --setupFilesAfterEnv=./server/tests/setup.js --coverage --testTimeout=30000",
    "test:integration": "NODE_ENV=test jest server/tests --setupFilesAfterEnv=./server/tests/setup.js --testTimeout=60000 --testNamePattern='integration'",
    "test:unit": "NODE_ENV=test jest server/tests --setupFilesAfterEnv=./server/tests/setup.js --testTimeout=10000 --testNamePattern='unit'",
    "test:client": "cd client && npm test",
    "test:client:coverage": "cd client && npm test -- --coverage --testTimeout=30000",
    "test:e2e": "cd client && npx playwright test",
    "test:all": "npm test && npm run test:client",
    "test:ci": "NODE_ENV=test jest server/tests --setupFilesAfterEnv=./server/tests/setup.js --coverage --ci --testTimeout=30000 && cd client && npm test -- --coverage --ci --testTimeout=30000",
    "lint": "cd client && npm run lint",
    "lint:fix": "cd client && npm run lint -- --fix",
    "db:seed": "NODE_ENV=development node scripts/seed-database.js",
    "db:reset": "NODE_ENV=development node scripts/reset-database.js",
    "db:migrate": "NODE_ENV=development node scripts/migrate-database.js",
    "deploy:vercel": "vercel --prod",
    "deploy:staging": "vercel",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "validate:env": "node scripts/validate-environment.js"
  },
  "keywords": [
    "marketplace",
    "coding",
    "projects",
    "licensing",
    "pack",
    "vibe coders",
    "developer community"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "openai": "^5.11.0",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "stripe": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.0",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
